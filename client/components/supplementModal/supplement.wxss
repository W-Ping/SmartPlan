.clock-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

.clock-modal {
  z-index: 3000;
  width: 80%;
  height: 300px;
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  background: #fff;
  overflow: hidden;
  border-radius: 5px;
}

.clock-title {
  width: 100%;
  text-align: center;
  line-height: 40px;
  height: 40px;
  border: 2px #f6f6f6 solid;
}

.clock-box {
  height: 200px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.clock-box-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  min-width: 400rpx;
  margin: 10rpx auto;
  font-size: 15px;
}

.clock-desc {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 200rpx;
}

.clock-value {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 200rpx;
}

.clock-btn {
  height: 60px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.select-text {
  color: #ccc;
}

.btn {
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  border-top: 1rpx solid #ccc;
}

.confirm {
  color: rgb(60, 197, 31);
  border-left: 1rpx solid #ccc;
}
.clock-warn{
  margin: 20rpx auto;
  font-size: 14px;
  color: yellowgreen;
}
