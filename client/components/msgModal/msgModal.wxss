/* components/msgModal/msgModal.wxss */

.msg-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

.msg-modal {
  z-index: 3000;
  width: 80%;
  height: 300px;
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  background: #fff;
  overflow: hidden;
  border-radius: 5px;
}

.msg-title {
  width: 100%;
  text-align: center;
  line-height: 40px;
  height: 40px;
  border: 2px #f6f6f6 solid;
}

.msg-content {
  padding: 5px;
}

.msg-box {
  height: 80%;
}

.btn-box {
  width: 100%;
  height: 20%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-top: 1rpx solid #ccc;
}

.btn-left, .btn-right {
  width: 50%;
  height: 100%;
  border-left: 1rpx solid #ccc;
}

.btn {
  width: inhrit;
  height: inherit;
  color: #000;
  display: flex;
  align-items: center;
  justify-content: center;
