
.wx-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

.selectable-continer {
  z-index: 3000;
  display: flex;
  justify-content: center;
  flex-direction: column;
  text-align: center;
  position: fixed;
  width: 100%;
  bottom: 0;
  overflow: hidden;
}

.selectable-btn {
  width: 100%;
  border-bottom: 1rpx solid #ccc;
}

.selectable-btn .st-cancel {
  background: #fff;
  width: 50%;
  padding: 5px;
  text-align: left;
  color: #888888;
}

.selectable-btn .st-confirm {
  background: #fff;
  color: rgb(60, 197, 31);
  width: 50%;
  text-align: right;
  padding: 5px;
  float: right;
}

.search {
  width: 100%;
  background: #fff;
  height: 50px;
  padding: 5px;
}

.search_arr {
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
  width: 90%;
  text-align: center;
  margin: 0 auto;
  /* background: blue; */
   margin-left: 20rpx;
}

.search_arr input {
  margin-left: 60rpx;
  height: 60rpx;
  border-radius: 5px;
}

.bc_text {
  line-height: 68rpx;
  height: 68rpx;
  margin-top: 34rpx;
}

.searchcion {
  margin: 10rpx 10rpx 10rpx 10rpx;
  position: absolute;
  left: 25rpx;
  z-index: 2;
  width: 20px;
  height: 20px;
  text-align: center;
}


.selectable-item {
 height: 20px;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding:10px; 
  margin: 0 auto;
}
.even {
  background: #ebf6f7;
}

.odd {
  background: #fff;
}
.label-icon {
  background: #000;
  width: 15px;
  height: 15px;
  padding: 5rpx;
}
.icon {
  background: #fff;
  width: 15px;
  height: 15px;
}

.checked {
  background: rgb(60, 197, 31);
}
.image {
  height: 25px;
  width: 25px;
  border-radius: 50%;
}