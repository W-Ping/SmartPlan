/**app.wxss**/
@import 'weui.wxss';
@import 'pages/template/plan.wxss';
@import 'pages/template/statistics.wxss';

page {
  background: #f6f6f6;
  font-family: Arial, Helvetica, sans-serif;
  font-size: 16px;
}

.pd-5 {
  padding-left: 5px;
}

.pd-10 {
  padding-left: 10px;
}

.gt {
  width: 10%;
  text-align: center;
  color: #888;
}

.save-container {
  margin: 0 auto;
  width: 95%;
}

.save-btn {
  position: fixed;
  left: 0;
  right: 0;
  width: 100%;
}

.save-btn button {
  width: 90%;
  background: #00abff;
  color: #fff;
}

.save-content {
  height: 120px;
  background: #ffff;
  margin: 10px auto;
  padding: 5px;
  width: 95%;
  border-radius: 5px;
}

.save-content textarea {
  height: 100px;
  width: 100%;
}
/* 没有数据的提示样式 */
.data-none-warn {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  background: #fff;
  overflow: hidden;
  border-radius: 5px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #00abff;
  font-weight: 700;
  font-size: 20px;
}
