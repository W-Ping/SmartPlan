.note-box {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background: #fff;
  margin: 5rpx auto;
  width: 100%;
  height: 45px;
  /* padding-left: 10rpx; */
}

.note-box input {
  font-weight: 600;
  height: 90%;
  width: 95%;
}

.note-content {
  height: 90px;
}

.note-box textarea {
  height: 90%;
  width: 95%;
}

.note-desc {
  padding-left:10rpx; 
  width: 40%;
}

.note-opt {
  text-align: right;
  width: 60%;
}

.note-remind {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.note-btn {
  margin: 10rpx auto;
}
