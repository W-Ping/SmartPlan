.pi-content {
  height: 98%;
  width: 98%;
  display: flex;
  flex-direction: column;
  background: #fff;
  border-radius:5px;
  margin: 10rpx auto; 
}

.pi-title {
  margin: 0 10rpx;
  height: 200rpx;
  overflow-wrap: break-word;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}

.pi-other {
  padding: 10rpx;
  font-size: 12px;
  margin: 0 10rpx;
  color: #ccc;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.pi-other .pi-status {
  padding: 10rpx;
  color: #00abff;
}