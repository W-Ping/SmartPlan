.dis-navbar {
  display: flex;
  display: -webkit-box;
  display: -webkit-flex;
  position: absolute;
  z-index: 500;
  top: 0;
  width: 100%;
  background: #fff;
  border-bottom: 1rpx solid #ccc;
}

.dis-navbar-title {
  display: inline-block;
  font-size: 15px;
  max-width: 8em;
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
}

.dis-navbar-item {
  position: relative;
  display: block;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  height: 40px;
  /* padding: 10px 0; */
  line-height: 40px;
  text-align: center;
  font-size: 0;
}

.dis-navbar-item.dis-navbar-active {
  color: #00abff;
}

.dis-navbar-slider {
  position: absolute;
  content: " ";
  left: 0;
  bottom: 0;
  width: 6em;
  height: 3px;
  background-color: #00abff;
  -webkit-transition: -webkit-transform 0.3s;
  transition: -webkit-transform 0.3s;
  transition: transform 0.3s;
}

.dis-content {
  position: fixed;
  top: 45px;
  left: 0;
  right: 0;
  bottom: 5rpx;
}


