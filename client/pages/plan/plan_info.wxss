page {
  width: 100%;
  height: 100%;
}

.plan-box {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 80px;
  background: #ccc
}

.pb-title {
  position: fixed;
  top: 10rpx;
  left: 0;
  right: 0;
  height: 75px;
  overflow-wrap: break-word;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  font-size: 15px;
  color: #f6f6f6;
  padding: 0 10rpx;
  font-weight: 600;
}

