page {
  width: 100%;
  height: 100%;
}

.plan-box {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 80px;
  background: #ccc;
}

.pb-title {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 80px;
  white-space: pre-wrap;
  /* word-break: break-all; */
  overflow-wrap: break-word;
}

.pb-title> text {
  width: 100%;
  height: 100%;
  padding-left: 20rpx;
  padding-right: 20rpx;
  white-space: pre-wrap;
  font-size: 15px;
  font-weight: 800;
  color: #f6f6f6;
}

.pb-vm {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #f6f6f6;
  opacity: 0.2;
  width: 100%;
  height: 80px;
  overflow: hidden;
}

.pb-time {
  position: fixed;
  top: 0;
  width: 100%;
  height: 80px;
  z-index: 1001;
  font-size: 25px;
  font-weight: 700;
  text-align: center;
  line-height: 80px;
  color: #fff;
}

.plan-detail-box {
  position: fixed;
  top: 85px;
  left: 0;
  right: 0;
  bottom: 5px;
  width: 100%;
}

.plan-item {
  width: 98%;
  height: 150rpx;
  background: #fff;
  display: flex;
  margin: 10rpx auto;
  flex-direction: row;
  background: #fff;
  border-radius: 5px;
  font-size: 14px;
  border-bottom: 1px solid #ccc;
  overflow: hidden;
}

.pi-content {
  width: 100%;
  display: flex;
  flex-direction: column;
  background: #fff;
  margin-right: 0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(180px);
  transform: translateX(180px);
  margin-left: -180px;
}

.pi-title {
  height: 120rpx;
  width: 100%;
}

.pi-title>text {
  font-size: 14px;
  padding-left: 20rpx;
  padding-right: 20rpx;
  white-space: pre-wrap;
}

.pi-other {
  height: 30rpx;
  width: 100%;
  font-size: 12px;
  text-align: right;
  line-height: 15px;
  padding-right: 20rpx;
  color: #ccc;
}

.plan-posit {
  display: flex;
  flex-direction: row;
  width: 180px;
  -webkit-transform: translateX(180px);
  transform: translateX(180px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}

.plan-opt {
  width: 90px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 14;
  font-weight: 800;
}

.priority {
  background-color: #888;
}

.delete {
  background: red;
}

.touch-move-active .pi-content,
.touch-move-active .plan-posit {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}