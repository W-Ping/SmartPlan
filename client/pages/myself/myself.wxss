/* client/pages/myself/myself.wxss */

page {
  background: #f6f6f6;
}

.my-container {
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background: #00abff;
  color: #fff;
  align-items: center;
  height: 80px;
  z-index: 1;
}

.avatar-box {
  width: 25%;
}

.my-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.info-box {
  width: 55%;
}

.setting-box {
  display: flex;
  flex-direction: row;
  width: 20%;
  font-size: 18px;
  opacity: 0.8;
}

.menu-continar {
  top: 80px;
  left: 0;
  right: 0;
  padding: 2px;
  font-size: 12px;
  font-weight: 500;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 160px;
}

.menu-box {
  background: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 80px;
}

.menu-item {
  /* width: 33%; */
  height: 80px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
}

.menu-image, .image {
  height: 30px;
  width: 30px;
}

.stat-none-warn {
  margin: 10rpx auto;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ccc;
  font-size: 18px;
  overflow: hidden;
}

.menu-item-box {
  position: fixed;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.menu-redpoint {
  display: inline-block;
  height: 18px;
  width: 18px;
  line-height: 18px;
  text-align: center;
  border-radius: 18px;
  color: #fff;
  position: relative;
  top: -20px;
  right: -20px;
}

.menu-redpoint-active {
  background: #f00;
}
