/* client/pages/template/statistics.wxss */

.stat-plan-box {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 98%;
  height: 80px;
  border-radius: 5px;
  background: #fff;
  margin: 5px auto;
}

.spb-day {
  width: 40%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  border-radius: 5px 0px 0px 5px;
}

.spb-split {
  height: 80%;
  width: 1%;
  background: #f6f6f6;
}

.spb-declare {
  width: 59%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  padding-left: 3px;
  font-size: 13px;
  border-radius: 0px 5px 5px 0px;
}

.plan-count {
  text-align: center;
  line-height: 15rpx;
  height: 15rpx;
  color: green;
  font-size: 14px;
  font-weight: 600;
  padding: 5rpx;
}

