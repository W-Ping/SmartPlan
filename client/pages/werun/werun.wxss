/* client/pages/werun/werun.wxss */

.step-today-box {
  top: 0;
  left: 0;
  right: 0;
  height: 250rpx;
  position: fixed;
  width: 100%;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.step-c {
  border: 5px solid #00abff;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 20px;
  font-weight: 700;
  color: rgb(60, 197, 31);
}

.step-c-desc {
  font-size: 14px;
  font-weight: 700;
  color: #00abff;
}

.step-history-box {
  top: 260rpx;
  left: 0;
  right: 0;
  bottom: 5px;
  width: 100%;
  position: fixed;
}

.step-history-item {
  height: 80rpx;
  width: 90%;
  margin: 2px auto;
  border: 2px solid #00abff;
  display: flex;
  align-items: center;
  flex-direction: row;
  border-radius: 5px;
  background: #fff;
}

.step-history-item :nth-child(1) {
  text-align: center;
  color: #00abff;
  width: 60%;
}

.step-history-item :nth-child(2) {
  text-align: center;
  color: rgb(241, 156, 44);
  width: 40%;
}

.step-auth {
  padding: 0 20px;
  height: 45px;
  background: #00abff;
  color: #fff;
  border-radius: 5px;
  line-height: 45px;
}
